<h2>ログイン</h2>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>
<br>
<br>
  <%= f.submit "ログイン" %>
<br>
<br>
<%= link_to '→アカウントをお持ちでなければこちら', new_user_path %>
<% end %>
